---
 cmake/ProjTest.cmake | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/cmake/ProjTest.cmake b/cmake/ProjTest.cmake
index ec56afd2..60e2a78f 100644
--- a/cmake/ProjTest.cmake
+++ b/cmake/ProjTest.cmake
@@ -41,5 +41,8 @@ function(proj_add_gie_test TESTNAME TESTCASE)
               COMMAND ${CMAKE_RUNTIME_OUTPUT_DIRECTORY}/${GIE_BIN} 
                       ${TESTFILE}
             )
+    file(TO_NATIVE_PATH "${PROJECT_SOURCE_DIR}/nad" proj_lib)
+    set_tests_properties(${TESTNAME}
